{
  "accessory": {
    "nEvents": 1,
    "run_transport": false,
    "run_digi": false,
    "run_reco": false,
    "run_AT": true,
    "transport_macro": "${VMCWORKDIR}/macro/run/run_transport_json_config.C",
    "digi_macro": "${VMCWORKDIR}/macro/run/run_digi_json_config.C",
    "reco_macro": "${VMCWORKDIR}/macro/run/run_reco_json_config.C",
    "AT_macro": "${VMCWORKDIR}/macro/analysis/common/analysis_tree_converter/run_analysis_tree_maker_json_config.C"},
  "logScreenLevel": "INFO",
  "logVerbosityLevel": "LOW",
  "transport": {
    "input": [
      {"generator": "unigen",
       "file": "${VMCWORKDIR}/input/urqmd.auau.10gev.mbias.root"},
      {"#generator": "pluto",
       "file": "${VMCWORKDIR}/input/pluto.auau.8gev.omega.mpmm.0001.root",
       "plutoPdg": 0},
      {"#generator": "beam",
       "beamA": 197,
       "beamZ": 79,
       "beamQ": 79,
       "beamP": 12.0,
       "beamStartZ": -1.0}
    ],
    "output": { 
      "path": "test",
      "overwrite": true
    },
    "target": {
      "material": "Gold",
      "thickness": 0.025,
      "diameter": 2.5,
      "position": {
        "x": 0.0,
        "y": 0.0,
        "z": 0.0
      },
      "rotation.y": 0.0
    },
    "beam": {
      "position": {
        "x": 0.0,
        "y": 0.0,
        "z": 0.0,
        "sigmaX": 0.1,
        "sigmaY": 0.1
      },
      "angle": {
        "x": 0.0,
        "y": 0.0,
        "sigmaX": 0.001,
        "sigmaY": 0.001
      }
    },
    "randomRP": true,
    "geantVersion": 3,
    "geant4vmcSettings": {
      "physicsLists": "QGSP_BERT_EMV+optical",
      "specialProcesses": "stepLimiter",
      "maxNsteps": 10000000,
      "geant4commands": [""]
    },
    "geometry": {
      "baseSetup": "sis100_electron",
      "magneticField": {
        "tag": "v18a",
        "scale": 1.0,
        "position": {
          "x": 0.0,
          "y": 0.0,
          "z": 40.0
        }
      },
      "subsystems": {
        "magnet":   "v20a",
        "pipe":     "v16b_1e",
        "mvd":      "v20c_tr",
        "sts":      "v19a",
        "rich":     "v17a_1e",
        "trd":      "v20b_1e",
        "tof":      "v20b_1e",
        "psd":      "v20a",
        "platform": "v13a"
      }
    },
    "stackFilter": {
      "storeAllPrimaries": true,
      "storeAllMothers": true,
      "storeAllDecays": true
    }
  },
  
  "digitization": {
    "generateRunInfo": false,
    "eventMode": true,
    "#timeSliceLength": -1.0,
    "#storeAllTimeSlices": false,
    "#startTime": 1000,
    "produceNoise": true,
    "input": [
      {"id": 0,
       "path": "test",
       "#rate": "1.e7",
       "treeAccessMode": "regular",
       "parameterSource": true},
      {"id": -1,
       "path": "test_emb",
       "embedToId": 0,
       "treeAccessMode": "regular"},
      {"id": -1,
       "path": "test_beam",
       "rate": "1.e9",
       "treeAccessMode": "random"}
    ],
    "output": {
      "path": "test",
      "overwrite": true
    },
    "geometry": {
      "deactivate": ["", ""],
      "#deactivateAllBut": ""
    }
  },
 
  "reconstruction": {
    "input": "test", 
    "nTimeSlices": -1,
    "firstTimeSlice": 0, 
    "output": {
      "path": "test",
      "overwrite": true
    },
    "sEvBuildRaw": "Ideal", 
    "paramFile": "test", 
    "useMC": false 
  },

  "AT": {
    "traPath": "test", 
    "rawPath": "", 
    "recPath": "", 
    "geoPath": "", 
    "parPath": "", 
    "unigenFile": "${VMCWORKDIR}/input/urqmd.auau.10gev.mbias.root",
    "output": {
      "path": "",
      "overwrite": false}
  }
